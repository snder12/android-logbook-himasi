<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp"/>

    <TextView
        android:id="@+id/tvMainUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDashboard"
        android:layout_centerHorizontal="true"
        android:text="userid" />

    <TextView
        android:id="@+id/tvMainUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMainUserId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="username" />

    <Button
        android:id="@+id/btnAnggota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anggota"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="106dp"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btnProker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proker"
        android:layout_below="@id/btnAnggota"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="106dp"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btnStaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staf"
        android:layout_below="@id/btnProker"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="106dp"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btnAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_below="@id/btnStaf"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="106dp"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:layout_below="@id/btnAbout"
        android:layout_marginTop="20dp"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="106dp"
        android:layout_centerInParent="true"/>




</RelativeLayout>